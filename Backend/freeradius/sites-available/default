# Default virtual server configuration
server default {
    listen {
        type = auth
        ipaddr = *
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }
    
    listen {
        type = acct
        ipaddr = *
        port = 1813
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }
    
    # Authorization - order matters!
    authorize {
        # Filter bad usernames
        filter_username
        
        # Preprocess hints and huntgroups
        preprocess
        
        # CHAP/MSCHAP must be before sql to set Auth-Type
        chap
        mschap
        
        # Check SQL for user credentials
        sql
        
        # PAP must be last - it sets Auth-Type if Cleartext-Password exists
        pap
    }
    
    # Authentication
    authenticate {
        Auth-Type PAP {
            pap
        }
        
        Auth-Type CHAP {
            chap
        }
        
        Auth-Type MS-CHAP {
            mschap
        }
    }
    
    # Post-Auth
    post-auth {
        sql
        
        Post-Auth-Type REJECT {
            sql
        }
    }
    
    # Accounting
    accounting {
        sql
    }
    
    # Session
    session {
        sql
    }
}
